<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">

    <TextView
            android:text="Ajout d'un authorisÃ©"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.502" android:textSize="30sp"
            android:fontFamily="@font/roboto_medium"/>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editText"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <com.google.android.material.textfield.TextInputEditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom" android:id="@+id/photoName"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:text="Ajouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPhoto" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/secondaryColor"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.7"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/linearLayout2"
            android:gravity="center">
        <TextView
                android:text="Attacher une photo "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photoText" android:textSize="20sp"
                android:fontFamily="@font/roboto"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:text="Importer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/importButton"
                android:backgroundTint="@color/secondaryLightColor"
                tools:layout_editor_absoluteX="154dp" android:layout_marginTop="10dp"/>
        <Button
                android:text="Photographier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/takePictureButton"
                android:backgroundTint="@color/secondaryLightColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/importButton"
                android:layout_marginTop="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>